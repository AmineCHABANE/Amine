{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "rewrites": [
    { "source": "/api/qrcode", "destination": "/api/tools?t=qrcode" },
    { "source": "/api/password", "destination": "/api/tools?t=password" },
    { "source": "/api/hash", "destination": "/api/tools?t=hash" },
    { "source": "/api/shorten", "destination": "/api/tools?t=shorten" },
    { "source": "/api/email-verify", "destination": "/api/tools?t=email-verify" },
    { "source": "/api/currency", "destination": "/api/tools?t=currency" },
    { "source": "/api/ip-geo", "destination": "/api/tools?t=ip-geo" },
    { "source": "/api/weather", "destination": "/api/tools?t=weather" },
    { "source": "/api/lorem", "destination": "/api/tools?t=lorem" },
    { "source": "/api/summarize", "destination": "/api/tools?t=summarize" },
    { "source": "/api/translate", "destination": "/api/tools?t=translate" },
    { "source": "/api/sentiment", "destination": "/api/tools?t=sentiment" },
    { "source": "/api/uuid", "destination": "/api/tools?t=uuid" },
    { "source": "/api/placeholder", "destination": "/api/tools?t=placeholder" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, x-api-key, Authorization" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" }
      ]
    }
  ]
}
